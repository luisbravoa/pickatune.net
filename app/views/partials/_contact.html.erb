<div class="container" id="contact">
    <h1><%= t "contact.title" %></h1>

    <div class="row">
        <div class="col-md-12">
            <p><%= t "contact.success" %></p>
            <form class="form-horizontal" role="form" method="post">
                <div class="form-group">
                    <label for="name" class="col-sm-2 control-label"><%= t "contact.name" %></label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="name" name="name" placeholder="<%= t "contact.name" %>" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-sm-2 control-label"><%= t "contact.email" %></label>

                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="email" name="email" placeholder="<%= t "contact.email" %>" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="message" class="col-sm-2 control-label"><%= t "contact.message" %></label>

                    <div class="col-sm-10">
                        <textarea class="form-control" rows="4" name="message"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10 col-sm-offset-2">
                        <button id="submit" name="submit" type="submit" class="btn btn-primary"><%= t "contact.send" %></button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10 col-sm-offset-2">
                        <! Will be used to display an alert to the user>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <hr>
</div>
